<% provide(:title, 'Sign up') %>
<h1 style="font-family: cursive;">Input information</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@form1) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :time_work %>
      <%= f.text_field :time_work %>

      <%= f.label :job %>
      <%= f.text_field :job %>

      <%= f.label :date %>
      <%= f.date_field :date %>

      <%= f.label :customer %>
      <%= f.text_field :customer %>

      <%= f.label :income %>
      <%= f.number_field :income %>

      <%= f.label "Work description" %>
      <%= f.text_field :work_des %>

      <%= f.submit "Submit",{:style=>'font-family: cursive;', :class => "css_class", class: "btn btn-warning"} %>
    <% end %>
  </div>
</div>
