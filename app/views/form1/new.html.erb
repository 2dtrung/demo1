<% provide(:title, 'Sign up') %>
<h1 style="font-family: arial;">Điền Thông Tin Làm Tự Do</h1>
<div class="row d-flex justify-content-lg-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for Form1.new do |f| %>
      <%= f.label :date, "Ngày"%>
      <%= f.date_field :date, class:"form-control", type:"datetime-local", value:Time.now %>
      <%= f.label :customer, "Khách hàng"%>
      <%= f.text_field :customer, class:"form-control form-control-lg", placeholder:"Nhập vào tên khách hàng" %>
      <%= f.label :income, "Thu nhập" %>
      <%= f.number_field :income, class:"form-control form-control-lg", placeholder:"Nhập vào số tiền bạn thu về"%>
      <%= f.label "Mô tả công việc" %>
      <%= f.text_field :work_des, class:"form-control form-control-lg", placeholder:"Nhập vào công việc bạn làm"%>
      <span class="image">
        <%= f.label :image, "Hình ảnh xác nhận" %>
        <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
      </span>
      <%= f.submit "Xác nhận",{:style=>'font-family: cursive;', :class => "css_class", class: "btn btn-warning"} %>
    <% end %>
  </div>
</div>