<% provide(:title, "Log in") %>
<h1 style="font-family: cursive;">Sign in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to "(If you forgot password, click here!)", new_password_reset_path , {:style=>'font-family:cursive; font-style: italic;', :class => "css_class"}%>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>
      <%= f.submit "Sign in",{:style=>'font-family:cursive', :class => "css_class",class: "btn btn-warning"} %>
    <% end %>

    <p style=" font-family: cursive;">If you don't have an account? <%= link_to "Sign up now!", signup_path, {:style=>'font-style: italic;', :class => "css_class"} %></p>
  </div>
</div>