<% provide(:title, "Log in") %>
<h1 style="font-family: cursive;">Đăng Nhập</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :Email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "Mật khẩu"%>
      <%= link_to "(Nếu bạn quên mật khẩu, vui lòng chọn vào đây!)", new_password_reset_path , {:style=>'font-family:cursive; font-style: italic;', :class => "css_class"}%>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Nhớ tài khoản trên máy tính của bạn</span>
      <% end %>
      <%= f.submit "Sign in",{:style=>'font-family:cursive', :class => "css_class",class: "btn btn-warning"} %>
    <% end %>

    <p style=" font-family: cursive;">Nếu bạn chưa có tài khoản? <%= link_to "Đăng ký ngay!", signup_path, {:style=>'font-style: italic;', :class => "css_class"} %></p>
  </div>
</div>