<% provide(:title, 'Form') %>
<h1 style="font-family: cursive;">Điền Thông Tin Làm cho Công Ty</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@form2) do |f| %>
      <%= f.label :date, "Ngày" %>
      <%= f.date_field :date, class:"form-control", type:"datetime-local", value:Time.now%>
      <%= f.label "Mô tả công việc" %>
      <%= f.text_field :work_des, class:"form-control form-control-lg", placeholder:"nhập vào công việc hàng ngày"%>
      <%= f.label :income, "Thu nhập" %>
      <%= f.number_field :income, class:"form-control form-control-lg", placeholder:"nhập vào số tiền của công việc cần điền"%>
      <span class="image">
        <%= f.label :image, "Hình ảnh xác nhận" %>
        <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
      </span>
      <%= f.submit "Xác nhận", {:style=>'font-family: cursive;', :class => "css_class", class: "btn btn-warning"} %>
    <% end %>
  </div>
</div>