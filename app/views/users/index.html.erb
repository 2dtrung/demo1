<% provide(:title, 'All users') %>
<h1>Danh sách người dùng</h1>

<ul class="users">
  <% @user.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
            ~~~~> <%= link_to "Xóa", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>