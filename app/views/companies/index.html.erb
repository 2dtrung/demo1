<p id="notice"><%= notice %></p>

<h1>Danh Sách Công ty</h1>

<table>
  <thead>
    <tr>
      <th>Tên Công ty</th>
      <th>Mã thuế </th>
      <th>Địa chỉ</th>
      <th>Vị trí</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.company_name %></td>
        <td><%= company.tax_code %></td>
        <td><%= company.address %></td>
        <td><%= company.position %></td>
        <td><%= link_to 'Sửa', "/users/#{current_user.id}/companies/#{company.id}/edit" %></td>
        <td><%= link_to 'Xóa', "/users/#{current_user.id}/companies/#{company.id}/", method: :delete, data: { confirm: 'Bạn có chắc muốn xóa không?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Tạo Công ty mới', new_user_company_path(current_user) %>
